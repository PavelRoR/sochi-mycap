.button
	display inline-block
	text-align center
	margin 0 auto
	text-decoration none
	color: #fff
	box-shadow: inset 1px 1px 0 0 #f7f3aa
	background-color: #cc922f
	padding 21px 30px
	width 100%
	max-width 325px
	font-family: GM
	font-size: 16px
	font-weight: normal
	text-transform uppercase
	transition: all .3s ease
	&:focus
		text-decoration none
		color #fff
		background-color: #cc922f
	&:hover
		text-decoration none
		color #fff
		background-color: #cc922f - 25%
		box-shadow: inset -1px -1px 0 0 #f7f3aa
	&-wrapper-center
		text-align center
	@media screen and (max-width 991px)
		&-wrapper
			text-align center
	@media screen and (max-width 560px)
		padding 20px
	@media screen and (max-width 385px)
		line-height: 1.2
		min-width: 1px
		font-size: 16px
.general-wrapper
	padding 30px 40px
	background-color: #f8f8f8
	box-shadow: 0px 0px 46.41px 4.59px rgba(0, 0, 0, 0.1);
	position relative
	z-index 25
	@media screen and (max-width 560px)
		padding 20px 30px
	@media screen and (max-width 385px)
		padding 15px 20px
	&-title
		text-transform uppercase
		font-family GM
		font-size: 18px
		font-weight: 900
		margin-bottom: 30px
		@media screen and (max-width 560px)
			margin-bottom: 20px
.general-text
	margin-bottom: 30px
	&-bold
		font-weight: bold
	@media screen and (max-width 560px)
		margin-bottom: 20px
	@media screen and (max-width 385px)
		margin-bottom: 10px
.general-title
	font-family: GM
	font-size: 35px
	font-weight: 900
	text-transform uppercase
	margin-bottom: 50px
	text-align center
	@media screen and (max-width 991px)
		font-size: 30px
	@media screen and (max-width 560px)
		font-size: 26px
		margin-bottom: 30px
	@media screen and (max-width 385px)
		font-size: 22px
.general-list
	list-style none
	li
		margin-bottom: 10px
		&:last-child
			margin-bottom: 0
.content
	position relative
	z-index 40
.general-img
	position relative
	padding-top: 100%
	img
		position absolute
		width auto
	@media screen and (max-width 991px)
		padding 0
		img
			position static
			display block
			width 100%
			margin 0 auto 30px
.rect
	position absolute