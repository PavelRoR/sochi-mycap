header
	overflow hidden
	padding 20px 0
	margin-bottom: 40px
	@media screen and (min-width 2295px)
		margin-bottom: 120px
	@media screen and (max-width 991px)
		margin-bottom: 20px
	@media screen and (max-width 767px)
		padding 15px 0
		text-align center
	@media screen and (max-width: 560px)
		text-align left
	.&-nav
		@media screen and (max-width: 560px)
			position: fixed;
			width: 300px;
			height: 100%;
			background-color: #16133f
			padding: 20px;
			z-index: 190;
			top 0
			left: -100%
			transition: all .3s ease
		@media screen and (max-width 385px)
			width 100%
.logo
	float left
	overflow hidden
	&-link
		float: left
	&-text
		border-left: 1px solid #fff
		margin-left: 10px
		padding-left: 10px
		color: #fff
		font-size: 14px
		font-family: GM
		font-weight: normal
		float: left
		text-align: left
	&&-mobile
		display none
		position relative
		z-index 200
		@media screen and (max-width 560px)
			display block
	@media screen and (max-width 767px)
		float: none
		display inline-block
		margin-bottom: 5px
	@media screen and (max-width 560px)
		width 160px
		&-text
			margin 10px 0 0
			padding  5px 0 0
			border-left: 0
			border-top: 1px solid #245eea
			font-size: 12px
.contacts
	float: right
	text-align right
	line-height: 1.315
	@media screen and (max-width 767px)
		float: none
		// display inline-block
		text-align center
		line-height: 1.1
	@media screen and (max-width 560px)
		margin-top: 15px
		text-align: left
.contact
	font-family: GM
	text-align: left
	background-repeat: no-repeat
	background-position: center left
	display inline-block
	&&-tg
		padding-left: 38px
		background-image: url(../img/icons/telegram.png)
	&&-phone
		padding-left: 28px
		background-image: url(../img/icons/phone.png)
		margin-left: 40px
	&-text
		color: #245eea
		font-size: 14px
		font-weight: normal
	&-link
		display block
		font-size: 18px
		font-weight: bold
		color #fff
		&:active
			color #fff
			text-decoration none
		&:hover
			color #fff
			text-decoration underline
	@media screen and (max-width 560px)
		&&-phone
			padding-left: 38px
			margin 15px 0 0
			background-position: center left 5px
		&-text
			font-size: 12px
		&-link
			font-size: 16px
.mobile-menu
	display: none;
	position: absolute;
	width: 30px;
	height: 25px;
	padding: 5px;
	top 20px
	right: 40px;
	cursor: pointer;
	z-index: 300;
	&-line
		width: 100%;
		height: 3px;
		background-color: #fff
		position: absolute;
		transition: all .4s ease
		&-1
			top 0
			&.switched
				transform: rotate(45deg)
				top 13px
				right: 0;
				left: 0;
				width: 42px;
		&-2
			height: 2px;
			top calc(50% - 1px)
			&.switched
				opacity: 0;
		&-3
			bottom: 0
			&.switched
				transform: rotate(-45deg)
				top 13px
				left: 0;
				right: 0;
				width: 42px;
	@media screen and (max-width: 560px)
		display block
.nav-active
	left: 0 !important;