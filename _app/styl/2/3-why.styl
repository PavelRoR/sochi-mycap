#why
	padding 90px 0
	margin-top: 90px
	background-color: #D6E0EA
	@media screen and (max-width 991px)
		padding 60px 0
		margin-top: 60px
	@media screen and (max-width 560px)
		margin-top: 40px
		padding 40px 0
	@media screen and (max-width 385px)
		padding 30px 0
		margin-top: 30px
.general-title-why
	margin-bottom: 0
	small
		display block
		font-size: 18px
		font-weight: bold
		margin: 50px 0 35px
		@media screen and (max-width 560px)
			margin 30px 0 20px

.why-item
	background-color: #fff
	border-bottom: 5px solid #0f1f2f
	padding 30px 25px
	text-align center
	width 100%
	max-width 380px
	margin 0 auto 30px
	box-shadow: 0 0 46.41px 4.59px rgba(#15093f, .23)
	&-icon
		width 130px
		height: 124px
		margin 0 auto 40px
		background-image: url(../img/icons/why.png)
		background-repeat: no-repeat
		&-1
			background-position: 0 0
		&-2
			background-position: -130px 0
		&-3
			background-position: -260px 0
		&-4
			background-position: -390px 0
		&-5
			background-position: -521px 0
		&-6
			background-position: -651px 0
	&-text
		font-family: GM
		font-weight: 600
		display flex
		align-items: center
		justify-content: center
		vertical-align: middle
		text-transform uppercase
		min-height 216px
	@media screen and (min-width 2295px)
		&-text
			min-height 270px
	@media screen and (max-width 1199px)
		&-text
			min-height 297px
	@media screen and (max-width 991px)
		&-text
			min-height 162px
	@media screen and (max-width 560px)
		padding 20px
		&-text
			min-height 150px
		&-icon
			margin-bottom: 20px
	@media screen and (max-width 385px)
		&-text
			min-height 120px
.why-aftertitle
	text-align center
	font-size: 25px
	font-family: GM
	font-weight: 900
	text-transform uppercase
	margin 30px 0 35px
	@media screen and (max-width 560px)
		font-size: 22px
		margin 25px 0 30px
	@media screen and (max-width 385px)
		font-size: 20px
		margin 10px 0 20px