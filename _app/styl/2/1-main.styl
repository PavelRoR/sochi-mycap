#main
	padding 0 0 65px
	position relative
	background-color: #0A1D37
	background-image: url(../img/backs/main.png)
	background-repeat: no-repeat
	background-position: center
	background-size cover
	color #fff
	@media screen and (max-width 991px)
		text-align center
		padding 0 0 60px
	@media screen and (max-width 560px)
		padding 0 0 40px
	@media screen and (max-width 385px)
		padding 0 0 30px
.main
	&-pre
		font-size: 16px
		font-weight: bold
		text-transform uppercase
		margin-bottom: 10px
		text-align center
	&-title
		font-family: GM
		font-size: 26px
		font-weight: 900
		text-transform uppercase
	&-subtitle
		display inline-block
		background-color: mBr
		padding 15px 25px
		line-height: 1
		margin 25px 0
		text-transform uppercase
	&-text
		font-size: 20px
		text-transform uppercase
		margin-bottom: 20px
	&-info
		&-text
			margin-top: 5px
			span
				display inline-block
				font-weight: bold
			&:first-of-type
				font-weight: bold
	&-aftertitle
		text-align center
		font-size: 30px
		font-family: GM
		font-weight: normal
		text-transform uppercase
		letter-spacing 10px
		margin-top: 40px
		@media screen and (max-width 767px)
			br
				display none
		@media screen and (max-width 560px)
			margin-top: 25px
			font-size: 25px
		@media screen and (max-width 385px)
			font-size: 20px
.video-wrapper-main
	max-width 560px