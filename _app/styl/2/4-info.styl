.info-item-1
	margin-bottom: 70px
.info-item-list
	li
		list-style: none
		margin-bottom: 20px
		padding-left: 25px
		position relative
		&:before
			content: ''
			display block
			position absolute
			width 14px
			height: 14px
			border-radius: 50px
			background-color: mBr
			top 7px
			left 0
		&:last-child
			margin-bottom: 0
	@media screen and (max-width 991px)
		li
			br
				display none
	@media screen and (max-width 560px)
		li
			margin-bottom: 15px
.info-item-title
	font-family: GM
	font-size: 20px
	font-weight: 900
	margin-bottom: 30px
	text-transform uppercase
	@media screen and (max-width 385px)
		margin-bottom: 20px
		font-size: 18px
.info-item-subtitle
	font-family: GM
	font-size: 18px
	font-weight: 600
	margin: 30px 0 20px
	text-transform uppercase
.info-item-text
	font-family: GM
	font-size: 18px
	margin-bottom: 20px
	@media screen and (max-width 385px)
		margin-bottom: 10px
.info-item-img
	position relative
	z-index 0
	img
		width auto
		position absolute
	&-1
		img
			top 200px
			right -32px
	&-2
		img
			top 300px
			left -32px
	@media screen and (min-width 2295px)
		&-1
			img
				right 0
		&-2
			img
				left 0
	@media screen and (max-width 1199px)
		&-1
			img
				right -72px
		&-2
			img
				left -72px
	@media screen and (max-width 991px)
		img
			position: static
			display block
			width 100%
			max-width 532px
			margin 0 auto 30px