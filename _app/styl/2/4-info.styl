#info
	padding 90px 0
	background-image: url(../img/images/laptop.png)
	background-repeat: no-repeat
	background-position: center
	@media screen and (max-width 991px)
		padding 60px 0
	@media screen and (max-width 560px)
		padding 40px 0
	@media screen and (max-width 385px)
		padding 30px 0
.rect-info-1
	z-index 0
	width 100%
	height 320px
	background-color: #0F1F2F
	right -40%
	top 200px
.rect-info-2
	z-index 0
	width 100%
	height 380px
	background-color: #0F1F2F
	left -40%
	bottom 100px
.general-wrapper-info
	margin-bottom: 50px
.info-list
	li
		list-style: none
		margin-bottom: 20px
		padding-left: 25px
		position relative
		&:before
			content: ''
			display block
			position absolute
			width 14px
			height: 14px
			border-radius: 50px
			background-color: mBr
			top 7px
			left 0
	@media screen and (max-width 991px)
		li
			br
				display none
	@media screen and (max-width 560px)
		li
			margin-bottom: 15px
			&:last-child
				margin-bottom: 30px
.info-title
	font-family: GM
	font-size: 20px
	font-weight: 900
	margin-bottom: 30px
	text-transform uppercase
.info-subtitle
	font-family: GM
	font-size: 18px
	font-weight: 600
	margin: 30px 0 20px
	text-transform uppercase
.info-text
	font-family: GM
	font-size: 18px
	margin-bottom: 20px