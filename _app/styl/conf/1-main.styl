#main
	padding 0 0 60px
	min-height 100vh
	text-align center
	background-image: url(../img/backs/main-conf.jpg)
	background-repeat: no-repeat
	background-position: center
	background-size: cover
	color #fff
	@media screen and (max-width 560px)
		padding 0 0 40px
.content
	position relative
	z-index 10
.main
	&-title
		font-family: GM
		font-size: 35px
		font-weight: 900
		text-transform uppercase
		margin-bottom: 30px
		@media screen and (max-width 991px)
			font-size: 30px
		@media screen and (max-width 560px)
			font-size: 26px
			margin-bottom: 20px
		@media screen and (max-width 385px)
			font-size: 24px
			margin-bottom: 15px
			line-height: 1.3
	&-subtitle
		font-family: GM
		font-size: 26px
		font-weight: bold
		text-transform uppercase
		margin: 20px 0
		@media screen and (max-width 991px)
			font-size: 24px
		@media screen and (max-width 560px)
			font-size: 18px
	&-subtitle-2
		font-family: GM
		font-size: 26px
		font-weight: 600
		color #CC922F
		@media screen and (max-width 991px)
			font-size: 24px
		@media screen and (max-width 560px)
			font-size: 22px
	&-text
		font-family: GM
		font-size: 22px
		span
			display inline-block
			color: #CC922F
			font-weight: 600
		@media screen and (max-width 991px)
			font-size: 18px
		@media screen and (max-width 385px)
			line-height: 1.3
	&-list
		width 100%
		max-width 800px
		margin 20px auto 30px
		&-item
			width 100%
			max-width 320px
			margin 0 auto
			&-icon
				width 50px
				height: 50px
				margin 0 auto 10px
				background-image: url(../img/icons/confirm.png)
				background-repeat: no-repeat
				&-1
					background-position: 0 0
				&-2
					background-position: -50px 0
				&-3
					background-position: -100px 0
		@media screen and (max-width 991px)
			margin-bottom: 0
			&-item
				margin-bottom: 30px
.button-thanks
	display block
	border-radius: 7px;
	box-shadow: inset 0px 1px 0px 0px rgba(3, 155, 229, 0.4), 0 2px 2px 0 #077fba, 0px 1px 25.23px 3.77px rgba(3, 155, 229, 0.79);
	width 100%
	max-width: 220px;
	margin 0 auto 30px
	background-color: #039be5
	color #fff
	padding 20px 30px
	transition: all .3s ease
	&:focus
		color #fff
		text-decoration none
	&:hover
		color #fff
		text-decoration none
		background-color: #039be5 + 25%
		box-shadow: inset 0px 0px 0px 0px rgba(3, 155, 229, 0), 0 0 2px 0 #077fba, 0px 1px 5.23px 3.77px rgba(3, 155, 229, 0.9);
		transform: translateY(4px)