#main
	padding 0 0 90px
	position relative
	background-color: #04050B
	background-image: url(../img/backs/main.jpg)
	background-repeat: no-repeat
	background-position: center
	background-size cover
	color #fff
	@media screen and (max-width 991px)
		text-align center
		padding 0 0 60px
	@media screen and (max-width 560px)
		padding 0 0 40px
	@media screen and (max-width 385px)
		padding 0 0 30px
.main
	&-pre
		font-family: GM
		font-size: 14px
		margin-bottom: 10px
	&-title
		font-family: GM
		font-size: 30px
		font-weight: 600
		text-transform uppercase
		span
			background-color: #cc922f
			padding 5px 5px 10px
		@media screen and (max-width 1199px)
			br
				display none
		@media screen and (max-width 991px)
			font-size: 26px
		@media screen and (max-width 560px)
			font-size: 22px
		@media screen and (max-width 385px)
			font-size: 20px
	&-subtitle
		font-family: GM
		font-size: 35px
		font-weight: 900
		margin 50px 0
		text-transform uppercase
		@media screen and (max-width 1199px)
			br
				display none
		@media screen and (max-width 991px)
			font-size: 30px
			margin 30px 0
		@media screen and (max-width 560px)
			font-size: 26px
		@media screen and (max-width 385px)
			font-size: 22px
			margin 20px 0
	&-info
		&-text
			margin-top: 5px
			span
				display inline-block
				font-weight: bold
.video-wrapper-main
	max-width 560px
	margin-top: 60px
	@media screen and (max-width 991px)
		margin-top: 30px