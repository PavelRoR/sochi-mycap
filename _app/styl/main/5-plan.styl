#results
	padding 90px 0 50px
	@media screen and (max-width 991px)
		padding 60px 0
	@media screen and (max-width 560px)
		padding 40px 0
	@media screen and (max-width 385px)
		padding 30px 0
.general-title-results
	margin-bottom: 0
.results-subtitle
	font-family: GM
	font-size: 30px
	font-weight: 600
	text-transform uppercase
	margin 15px 0
	text-align center
	@media screen and (max-width 991px)
		font-size: 24px
	@media screen and (max-width 560px)
		font-size: 20px
.results-subtitle-2
	display block
	padding 24px 20px
	width 100%
	max-width 600px
	margin 0 auto
	text-transform uppercase
	font-family: GM
	font-size: 30px
	font-weight: 300
	background-color: #cc922f
	text-align: center
	color #fff
	@media screen and (max-width 991px)
		font-size: 24px
	@media screen and (max-width 560px)
		font-size: 22px
		padding 15px 20px
	@media screen and (max-width 385px)
		font-size: 18px
.results-container
	border-radius: 40px
	background-color: #e6e6e6
	padding: 0 40px 60px
	position relative
	width 100%
	max-width 650px
	margin 50px auto 0
	@media screen and (max-width 560px)
		padding 0 20px 30px
	&-img
		display block
		width 100%
		max-width 473px
		position relative
		left 0
		right 0
		margin 0 auto
		top -30px
	&-title
		font-family: GM
		font-size: 35px
		font-weight: 900
		text-transform uppercase
		color #19334d
		small
			font-size: 28px
			display block
			margin-bottom: 40px
		@media screen and (max-width 991px)
			font-size: 30px
			small
				font-size: 22px
		@media screen and (max-width 560px)
			font-size: 26px
			small
				font-size: 20px
				margin-bottom: 20px
		@media screen and (max-width 385px)
			font-size: 22px
			small
				font-size: 18px
.rect.rect-results
	width 270px
	height 300px
	background-color: #19334d
	right -50px
	bottom: -50px
	z-index 0
.results-img
	display block
	width 100%
	max-width 569px
	margin 150px auto 0
	position relative
	z-index 10
	@media screen and (max-width 1199px)
		margin-top: 100px
	@media screen and (max-width 991px)
		margin-top: 40px