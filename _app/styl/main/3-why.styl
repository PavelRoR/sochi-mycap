#about
	padding 90px 0 20px
	@media screen and (max-width 991px)
		padding 60px 0
	@media screen and (max-width 560px)
		padding 40px 0
	@media screen and (max-width 385px)
		padding 30px 0
.general-wrapper-about
	margin-bottom: 30px
.about-wrapper-list
	li
		list-style: none
		padding-left: 25px
		position relative
		&:nth-child(2)
			margin 35px 0
			@media screen and (max-width 560px)
				margin 20px 0
		&:before
			content: ''
			display block
			position absolute
			top 7px
			left 0
			border-radius: 50px
			background-color: #CC922F
			width 14px
			height 14px
		@media screen and (max-width 1199px)
			br
				display none
.about-img
	width 100%
	max-width 485px
	margin 100px auto 0
	display block
	@media screen and (max-width 991px)
		margin 0 auto 40px
.general-img-about
	img
		bottom: 60px
		right 0
		max-width 684px
.rect-about
	width 506px
	height 193px
	background-color: #16133f
	top -20px
	right -10px