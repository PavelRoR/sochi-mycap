#why
	padding 90px 0
	margin-top: 90px
	background-color: #D6E0EA
	@media screen and (max-width 991px)
		padding 60px 0
	@media screen and (max-width 560px)
		padding 40px 0
	@media screen and (max-width 385px)
		padding 30px 0
.general-title-why
	margin-bottom: 0
	small
		display block
		font-size: 18px
		font-weight: bold
		margin: 50px 0 35px
.why-item
	background-color: #fff
	border-bottom: 5px solid #0f1f2f
	padding 30px 25px
	text-align center
	width 100%
	max-width 380px
	margin 0 auto 30px
	box-shadow: 0 0 46.41px 4.59px rgba(#15093f, .23)
	&-icon
		width 130px
		height: 124px
		margin 0 auto 40px
		background-image: url(../img/icons/why.png)
		background-repeat: no-repeat
		&-1
			background-position: 0 0
		&-2
			background-position: -130px 0
		&-3
			background-position: -260px 0
		&-4
			background-position: -390px 0
		&-5
			background-position: -521px 0
		&-6
			background-position: -651px 0
	&-text
		font-family: GM
		font-weight: 600
		display flex
		align-items: center
		vertical-align: middle
		text-transform uppercase
		min-height 162px
.why-aftertitle
	text-align center
	font-size: 25px
	font-family: GM
	font-weight: 900
	text-transform uppercase
	margin 30px 0 35px