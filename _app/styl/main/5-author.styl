#author
	padding 75px 0 0
	background-color: #10193c
	margin-bottom: 20px
	overflow hidden
	.container
		background-image: url(../img/images/author-logo.png)
		background-repeat no-repeat
		background-position: bottom 30px left
		background-size 500px
		padding-bottom: 130px
		@media screen and (max-width 991px)
			padding-bottom: 160px
			background-position: center bottom 30px
			background-size auto 100px
		@media screen and (max-width 385px)
			background-size: auto 50px
			padding-bottom: 100px
			background-position: center bottom 15px
	@media screen and (max-width 560px)
		padding 40px 0 0
.general-title-author
	width 100%
	max-width 560px
	color #fff
.rect-author
	background-color: mBr
	width 1300px
	height 175px
	z-index 5
	top 210px
	right 15%
	@media screen and (min-width 2295px)
		right 30%
	@media screen and (max-width 991px)
		top auto
		bottom: -20px
	@media screen and (max-width 560px)
		left 40px
.author-container
	background-color: #F9F7F7
	padding 50px 30px
	position relative
	margin 70px 0 0
	z-index 10
	box-shadow: 0px 0px 57.04px 4.96px rgba(0, 42, 149, 0.19);
	@media screen and (max-width 991px)
		margin: 10px 0 0
	@media screen and (max-width 560px)
		padding 30px 20px
.general-img-author
	img
		top -90px
		right -110px
		z-index 10
		max-width 728px
	@media screen and (min-width 2295px)
		img
			right 150px
	@media screen and (max-width 1199px)
		img
			right -100px
			top 0
.form-author
	width 100%
	max-width 660px
	margin 140px auto 0
	@media screen and (min-width 2295px)
		margin-top: 100px
	@media screen and (max-width 991px)
		margin-top: 30px
	@media screen and (max-width 560px)
		margin-top: 50px
.form-title-author
	margin-bottom: 30px
	color: #000
	@media screen and (max-width 991px)
		margin-bottom: 20px
.input-mail-author
	float: left
	color #777070;
	@media screen and (max-width 991px)
		float: none
		display block
		margin 0 auto 10px
@-webkit-keyframes autofill-2
	to
		font-size: 16px
		color:  #777070;
		background-color: transparent
.input-mail-author:-webkit-autofill-2
	-webkit-animation-name: autofill;
	-webkit-animation-fill-mode: both;
.button-form-author
	float: right
	@media screen and (max-width 991px)
		display block
		margin 0 auto
		float: none
		width 100%
		max-width 320px