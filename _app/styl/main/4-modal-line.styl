#modal-line
	padding 40px 0
	background-color: #2A3350
	background-image: url(../img/backs/main-conf.jpg)
	background-repeat: no-repeat
	background-position: center
	background-size: cover
	@media screen and (max-width 991px)
		text-align center
	@media screen and (max-width 560px)
		padding 30px 0
.modal-line-title
	font-family: GM
	font-size: 35px
	font-weight: 900
	color: #fefefe
	text-transform uppercase
	@media screen and (max-width 991px)
		font-size: 30px
	@media screen and (max-width 560px)
		font-size: 26px
	@media screen and (max-width 385px)
		font-size: 22px
.button-wrapper-modal-line
	text-align right
	margin-top: 20px
	@media screen and (max-width 991px)
		text-align center