#last
	padding 90px 0
	background-color:#182352
	background-image: url(../img/backs/last.jpg)
	background-repeat: no-repeat
	background-position: center
	background-size: cover
	text-align center
	color: #fff
	@media screen and (max-width 991px)
		padding 70px 0
	@media screen and (max-width 560px)
		padding 50px 0
	@media screen and (max-width 385px)
		padding 40px 0
.footer
	&-title
		font-family: GM
		font-size: 35px
		font-weight: 900
		text-transform uppercase
		@media screen and (min-width 2295px)
			br
				display none
		@media screen and (max-width 1199px)
			br
				display none
		@media screen and (max-width 991px)
			font-size: 30px
		@media screen and (max-width 560px)
			font-size: 26px
			margin 30px 0
		@media screen and (max-width 385px)
			margin 20px 0 30px
			font-size: 22px
	&-subtitle
		font-family: GM
		font-size: 25px
		font-weight: 900
		margin-bottom: 65px
		text-transform uppercase
		@media screen and (max-width 991px)
			font-size: 22px
			margin-bottom: 40px
			br
				display none
		@media screen and (max-width 560px)
			font-size: 20px
		@media screen and (max-width 385px)
			font-size: 18px
	&-text
		font-size: 16px
		margin-bottom: 5px
		a
			color #fff
			&:focus
				color #fff
			&:hover
				color #fff
				text-decoration underline
		&:last-of-type
			margin-top: 50px
			@media screen and (max-width 560px)
				margin-top: 30px
.soc-links
	margin: 40px 0 70px
	@media screen and (max-width 991px)
		margin 40px 0
	@media screen and (max-width 560px)
		margin-bottom: 30px
.soc-link
	width 50px
	height: 50px
	border-radius: 50px
	text-align center
	margin 0 5px
	display inline-block
	background-image: url(../img/icons/soc-links.png)
	background-repeat: no-repeat
	text-decoration none
	transition: all .3s ease
	&:focus
		text-decoration none
	&:hover
		transform: translateY(-4px)
	&-vk
		background-position: 0 0
		box-shadow: 0px 1px 25.23px 3.77px rgba(77, 118, 161, 0.79);
		background-color #4d76a1
	&-yt
		background-position: -50px 0
		box-shadow: 0px 1px 25.23px 3.77px rgba(255, 0, 0, 0.79);
		background-color #ff0000
	&-insta
		background-position: -100px 0
		box-shadow: 0px 1px 25.23px 3.77px rgba(240, 0, 117, 0.79);
		background-color #f00075
	&-tg
		background-position: -150px 0
		box-shadow: 0px 1px 25.23px 3.77px rgba(3, 155, 229, 0.79);
		background-color #039be5
	&-fb
		background-position: -200px 0
		box-shadow: 0px 1px 25.23px 3.77px rgba(59, 89, 152, 0.79);
		background-color #3b5998
	@media screen and (max-width 560px)
		margin 0 1px